{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "ESNext",
    "target": "ES2020",
    "lib": ["ESNext", "DOM"],
    "allowJs": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "downlevelIteration": true,

    "plugins": [
      {
        "name": "@styled/typescript-styled-plugin",
        "lint": {
          "validProperties": ["label"]
        }
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
